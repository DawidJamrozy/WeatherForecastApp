<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="deleteCity"
            type="com.dawidj.weatherforecastapp.view.adapters.DeleteItem"/>
        <variable
            name="CityModel"
            type="com.dawidj.weatherforecastapp.models.dbtest.City"/>
    </data>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cityName"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{CityModel.name}"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityName"
        android:text=""/>

    <ImageView
        android:id="@+id/delete"
        android:src="@drawable/ic_delete_forever_black_18dp"
        android:layout_width="24dp"
        android:layout_marginEnd="10dp"
        android:onClick="@{() -> deleteCity.delete(CityModel)}"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout></layout>