<?xml version="1.0" encoding="utf-8"?>
<layout>
<data>
        <variable
            name="daily"
            type="com.dawidj.weatherforecastapp.models.Daily"/>
        <variable
            name="dailyData"
            type="com.dawidj.weatherforecastapp.models.DailyData"/>
</data>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/sun" />

        <TextView
            android:id="@+id/dayOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:text="" />

        <TextView
            android:id="@+id/conditionOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dayOne"
            android:layout_marginStart="60dp"
            android:text=""
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tempOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/imageOne"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:text="" />
</RelativeLayout>
</layout>